<% layout("/layouts/boilerplate.ejs") %>
<body>
  <div class="container container-fluid">
    <div class="row justify-content-center">
      <div class="col-lg-6 col-md-8 col-sm-10 col-12 showarea">
        <br />
        <h3><%=listing.title%></h3>
        <div class="card listing-card showcard">
          <img
            src="<%=listing.image%>"
            class="card-img-top show-img img-fluid"
          />

          <div class="card-body">
            <p class="card-text">
              <i><%= listing.description%></i> <br /><br />
              &#8377; <%=listing.price.toLocaleString("en-IN")%>/night
              <br />
              <%= listing.location%> , <%=listing.country%>
            </p>
          </div>
        </div>
        <div class="showbtns">
          <a
            class="btn btn-dark edit-btn"
            href="/listings/<%=listing._id%>/edit"
            >Edit
          </a>
          <form
            method="post"
            action="/listings/<%=listing._id%>/delete?_method=DELETE"
          >
            <button class="btn btn-dark">Delete</button>
          </form>
        </div>

        <br />
      </div>
      <hr />
    </div>
    <div
      class="col-lg-8 col-md-8 col-sm-10 col-12 offset-lg-3 offset-md-2 offset-sm-1 mb-3"
    >
      <h1>Leave a review</h1>
      <form
        action="/listings/<%=listing._id%>/reviews"
        method="post"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3">
          <label for="rating" class="form-label">Rating</label><br />
          <input
            type="range"
            min="1"
            max="5"
            id="rating"
            name="review[rating]"
            class="form-range"
            style="width: 25vw"
          />
        </div>
        <div class="mb-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea
            type="text"
            id="comment"
            name="review[comment] "
            cols="5"
            rows="5"
            class="form-control"
            style="width: 45vw"
            required
          ></textarea>
          <div class="invalid-feedback">
            Please submit some comments for review
          </div>
          <br />
          <button class="btn btn-outline-dark">Submit</button>
        </div>
      </form>
      <br />
    </div>
    <hr />
    <br />
    <div
      class="col-lg-8 col-md-8 col-sm-10 col-12 offset-lg-2 offset-md-1 offset-sm-1 mb-3"
    >
      <%if(listing.reviews.length>0){%>
      <h4 class="text-center">All Review</h4>
      <br />
      <div class="row">
        <% for(review of listing.reviews){%>
        <div class="card col-5 ms-4 mb-3 flex flex-wrap">
          <div class="card-body">
            <h5 class="card-title">User</h5>
            <p class="card-text"><%=review.comment%></p>
            <p class="card-text"><%=review.rating%> stars</p>

            <div class="flex flex-wrap ">
              <form
                action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE "
                method="post"
                class="mb-3"
              >
                <button class="btn btn-dark btn-sm">Delete</button>
              </form>
              
            </div>
          </div>
        </div>

        <%} %>
      </div>
      <%}else{%>
      <p class="text-center"><b>No reviews Yet</b></p>
      <%}%>
    </div>
  </div>
</body>
