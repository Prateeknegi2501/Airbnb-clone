<%if(success && success.length){%>
<div class="row-cols-lg-3 row-cols-md-2 row-cols-sm-1 d-flex justify-content-center">
  <div class="alert alert-success alert-dismissible" role="alert">
    <%=success%>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
</div>
<%}else if(failure && failure.length) {%>
<div class="row-cols-lg-3 row-cols-md-2 row-cols-sm-1 d-flex justify-content-center">
  <div class="alert alert-danger alert-dismissible" role="alert">
    <%=failure%>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
</div>
<%}%>
